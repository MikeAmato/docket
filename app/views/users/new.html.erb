<!DOCTYPE html>
<html>
<head>
</head>
<h1>Sign Up</h1>

<%= form_for(@user) do |user| %>

  <div>
    <%= user.label :name %>
    <%= user.text_field :name %>
  </div>
  <br/>

  <div>
    <%= user.label :email %>
    <%= user.text_field :email %>
  </div>
  <br/>

  <div>
    <%= user.label :password %>
    <%= user.password_field :password%>
  </div>
  <br/>

  <div>
    <%= user.label :password_confirmation %>
    <%= user.password_field :password_confirmation%>
  </div>
  <br/>
  
  <div>
    <%= user.submit 'Done' %>
  </div>

<% end %> 
</html>